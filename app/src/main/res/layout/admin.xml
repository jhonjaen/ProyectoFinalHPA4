<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/img"
        android:layout_width="280dp"
        android:layout_height="290dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/mov" />

    <Button
        android:id="@+id/ed"
        android:onClick="nnfc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img"
        android:layout_centerHorizontal="true"
        android:text="editar NFC"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reg"
        android:layout_below="@+id/ed"
        android:layout_centerHorizontal="true"
        android:text="Registrar estudiante"
        android:onClick="regist"
        android:layout_marginTop="10dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/delete"
        android:layout_below="@+id/reg"
       android:layout_centerHorizontal="true"
        android:text="Eliminar asistencia"
        android:onClick="Delete"
        android:layout_marginTop="10dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mod"
        android:layout_below="@+id/delete"
        android:layout_centerHorizontal="true"
        android:text="lista de actualizaciones"
        android:onClick="listup"
        android:layout_marginTop="10dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/matricula"
        android:layout_below="@+id/mod"
        android:layout_centerHorizontal="true"
        android:text="matricular"
        android:onClick="matricula"
        android:layout_marginTop="10dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sal"
        android:layout_below="@+id/matricula"
        android:layout_centerHorizontal="true"
        android:text="salir"
        android:onClick="salir"
        android:layout_marginTop="10dp"
        />

</RelativeLayout>