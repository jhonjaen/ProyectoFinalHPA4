<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profe"
    android:background="#42B1E0">


    <TextView
        android:id="@+id/txtasignatura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Asignatura:\nHerramientas de ProgramaciÃ³n Aplicadas IV"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="44dp"
        android:textColor="@color/white"

        />

    <TextView
        android:id="@+id/txtgrupo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grupo:\n1IL141"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/txtasignatura"
        android:textColor="@color/white"
        />

    <Button
        android:id="@+id/btnverlista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtgrupo"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#0076A7"
        android:layout_marginTop="70dp"
        android:text="Ver lista de asistencia"
        android:onClick="Verlista"
        />

    <Button
        android:id="@+id/btnpasarlista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnverlista"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#0076A7"
        android:layout_marginTop="60dp"
        android:text="Pasar lista"
        />


</RelativeLayout>